{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":rebaseStalePrs"
  ],
  "assignees": [
    "sebiklamar"
  ],
  "prBodyColumns": [
    "Package",
    "Package file",
    "Update",
    "Change"
  ],
  separateMinorPatch: true,
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.hcl$/",
        "/\\.tf$/",
        "/\\.tftpl$/",
        "/\\.yaml$/",
        "/\\.sh$/"
      ],
      "matchStrings": [
        "(?<currentValue>[\\w+\\.\\-]*)['\",;]*\\s*#\\s?renovate: (?<datasource>\\S+)=(?<depName>\\S+)\\s?(registry=(?<registryUrl>\\S+))?\\s?(versioning=(?<versioning>\\S+))?"
      ]
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ]
}
